<%= form_for @payment, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :responseCode, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :responseCode, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :responseMessage, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :responseMessage, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :xref, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :xref, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amountReceived, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amountReceived, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :transactionID, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :transactionID, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cardNumberMask, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cardNumberMask, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cardTypeCode, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cardTypeCode, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cardType, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cardType, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payments_path, :class => 'btn' %>
  </div>
<% end %>
